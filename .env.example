# üîê SECURE WALLET CONFIGURATION
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive information!

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Wallet Type: 'metamask', 'private_key', or 'hardware'
WALLET_TYPE=metamask

# Your wallet address (public address - safe to store)
WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# PRIVATE KEY (FOR TESTING ONLY - USE WITH EXTREME CAUTION!)
# =============================================================================

# ‚ö†Ô∏è  WARNING: Only use private key for testing with small amounts!
# ‚ö†Ô∏è  NEVER use your main wallet private key!
# ‚ö†Ô∏è  Create a separate test wallet with minimal funds!
# PRIVATE_KEY=your_private_key_here_for_testing_only

# =============================================================================
# ETHEREUM NODE CONFIGURATION
# =============================================================================

# Your Ethereum RPC URL (your node or Infura/Alchemy)
ETHEREUM_RPC_URL=http://localhost:8545

# Backup RPC URL (Infura/Alchemy for redundancy)
BACKUP_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Maximum gas price in gwei (safety limit)
MAX_GAS_PRICE_GWEI=50

# Maximum trade size in ETH (safety limit)
MAX_TRADE_SIZE_ETH=0.1

# Require manual confirmation for trades (true/false)
REQUIRE_CONFIRMATION=true

# =============================================================================
# DEX API KEYS (OPTIONAL - FOR HIGHER RATE LIMITS)
# =============================================================================

# 1inch API key (optional - for higher rate limits)
# ONEINCH_API_KEY=your_1inch_api_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Enable real trading (false for simulation, true for real money)
TRADING_ENABLED=false

# Minimum profit threshold (percentage)
MIN_PROFIT_THRESHOLD=0.05

# Scan interval in seconds
SCAN_INTERVAL=5

# =============================================================================
# FLASHBOTS CONFIGURATION (MEV PROTECTION)
# =============================================================================

# Flashbots relay URL
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# Flashbots signing key (separate from wallet key)
# FLASHBOTS_SIGNING_KEY=your_flashbots_signing_key_here

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Discord webhook for alerts (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram bot token and chat ID for alerts (optional)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# EXAMPLE VALUES FOR TESTING
# =============================================================================

